<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>User Management</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
    body {
      background: linear-gradient(120deg, #f0f4f8 0%, #dbeafe 100%);
      min-height: 100vh;
      margin: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Segoe UI', 'Microsoft YaHei', Arial, sans-serif;
    }
    .admin-users-container {
      background: #fff;
      padding: 2.5em 2em 2em 2em;
      border-radius: 14px;
      box-shadow: 0 4px 24px rgba(37,99,235,0.10);
      min-width: 800px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .admin-users-container h2 {
      color: #2563eb;
      margin-bottom: 1.5em;
      font-size: 1.7rem;
      letter-spacing: 1px;
    }
    .admin-users-container a {
      color: #2563eb;
      text-decoration: none;
      font-weight: 500;
      margin-bottom: 1em;
      transition: color 0.2s;
    }
    .admin-users-container a:hover {
      color: #1e40af;
      text-decoration: underline;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-bottom: 1.5em;
      background: #f9fafb;
      border-radius: 8px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(37,99,235,0.06);
    }
    th, td {
      padding: 0.8em 1em;
      text-align: center;
    }
    th {
      background: #2563eb;
      color: #fff;
      font-weight: 600;
      font-size: 1.05rem;
    }
    tr:nth-child(even) {
      background: #e0e7ef;
    }
    tr:nth-child(odd) {
      background: #f9fafb;
    }
    img {
      border-radius: 50%;
      border: 2px solid #2563eb22;
      box-shadow: 0 1px 4px rgba(37,99,235,0.08);
    }
    .admin-users-container .action-btn {
      display: inline-block;
      padding: 0.3em 1em;
      background: #2563eb;
      color: #fff;
      border-radius: 6px;
      text-decoration: none;
      margin-right: 0.5em;
      font-size: 0.98rem;
      transition: background 0.2s, transform 0.2s;
    }
    .admin-users-container .action-btn:hover {
      background: #1e40af;
      transform: translateY(-2px) scale(1.04);
    }
    .admin-users-container .logout {
      margin-top: 1.5em;
      color: #dc2626;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s;
    }
    .admin-users-container .logout:hover {
      color: #b91c1c;
      text-decoration: underline;
    }
    button[type="submit"] {
      background: #dc2626;
      color: #fff;
      border: none;
      border-radius: 6px;
      padding: 0.3em 1em;
      font-size: 0.98rem;
      cursor: pointer;
      transition: background 0.2s, transform 0.2s;
    }
    button[type="submit"]:hover {
      background: #b91c1c;
      transform: translateY(-2px) scale(1.04);
    }
    form[style] {
      display: inline;
    }
  </style>
</head>
<body>
  <div class="admin-users-container">
    <h2>User Management</h2>
    <a href="/admin/add" class="action-btn">Add New User</a>
    <table>
      <tr>
        <th>ID</th><th>Username</th><th>Email</th><th>Avatar</th><th>Action</th>
      </tr>
      <% users.forEach(function(user){ %>
        <tr>
          <td><%= user.user_id %></td>
          <td><%= user.user_name %></td>
          <td><%= user.email %></td>
          <td><img src="<%= user.avatar_url %>" width="40" height="40"></td>
          <td>
            <a href="/admin/edit/<%= user.user_id %>" class="action-btn">Edit</a>
            <form action="/admin/delete/<%= user.user_id %>" method="post" style="display:inline;">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </table>
    <a href="/admin/logout" class="logout">Logout</a>
  </div>
</body>
</html>